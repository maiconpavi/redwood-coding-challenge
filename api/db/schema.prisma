datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model FileVersion {
  id          Int      @id @default(autoincrement())
  versionId   String
  hash        String
  name        String
  description String?
  createdAt   DateTime @default(now())
  File        File?    @relation(fields: [fileId], references: [id])
  fileId      Int?

  @@unique([fileId, hash])
  @@unique([fileId, versionId])
}

model File {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime      @default(now())
  versions    FileVersion[]
}
